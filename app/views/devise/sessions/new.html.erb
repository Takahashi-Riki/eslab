<div class="form_container">
<div class="login_messages">
  <h2 class="login_message">ESらぼで</h2>
  <h2 class="login_message">信頼できる仲間や先輩の</h2>
  <h2 class="login_message">力を借りましょう</h2>
</div>
<div class="form">
  <h2 class="form_message">さあ、ログインしましょう。</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email , class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password , class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="action">
      <%= f.submit "ログイン", class: "btn btn-outline-warning btn-lg" %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
</div>
</div>
